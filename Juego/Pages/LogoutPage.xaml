<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Juego.Pages.LogoutPage"
             Title="LogoutPage"
             BackgroundImageSource="login.png">
    <VerticalStackLayout>
        <Label 
            Text="Logout"
            FontFamily="CustomFont"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="40"
            TranslationY="200"/>
        <Button x:Name="Logout" Text="Logout" BackgroundColor="#63e7ff" TextColor="White" FontAttributes="Bold" TranslationY="310" WidthRequest="250" Clicked="Logout_Clicked" Pressed="Logout_Pressed" Released="Logout_Released"></Button>
    </VerticalStackLayout>
</ContentPage>